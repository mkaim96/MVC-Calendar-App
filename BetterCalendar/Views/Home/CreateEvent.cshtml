@model BetterCalendar.Models.CreateEventViewModel
@{
    ViewData["Title"] = "CreateEvent";
}

<h2 class="header">Dodaj nowe wydarzenie</h2>

    


<div class="form">
    <form asp-controller="Home" asp-action="CreateEvent">
        @Html.AntiForgeryToken()
        

        <div asp-validation-summary="All"></div>


        <div class="form-group">
            <label asp-for="Title" class="label"></label>
            <input type="text" asp-for="Title" class="input"/>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="label"></label>
            <input type="text" asp-for="Description" class="input" />
            <p class="info">Opcjonalne</p>
        </div>

        <div class="form-group">
            <label asp-for="Start" class="label"></label>
            <input type="time" asp-for="Start" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="End" class="label"></label>
            <input type="time" asp-for="End" class="input" />
        </div>

        <div class="form-group">
            <input type="submit" value="Dodaj" class="button" />
        </div>
    </form>
</div>
