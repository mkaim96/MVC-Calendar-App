@model BetterCalendar.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="form">
    <form asp-controller="Account" asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="UserName" class="label"></label>
            <input type="text" asp-for="UserName" class="input"/>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="label"></label>
            <input type="password" asp-for="Password" class="input"/>
        </div>

        <div class="form-group">
            <label asp-for="RememberMe" class="label"></label>
            <input type="checkbox" asp-for="RememberMe" />
        </div>

        <div class="form-group">
            <input type="submit" value="Zaloguj" class="button" />
        </div>
    </form>
    
</div>

